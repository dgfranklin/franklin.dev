{
  "hosting": [
    {
      "target": "blog",
      "public": "out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "notes.franklin.dev/**",
          "function": "proxyObsidian"
        },
        {
          "source": "**",
          "destination": "/404.html"
        }
      ]
    },
    {
      "target": "notes",
      "rewrites": [
        {
          "source": "**",
          "function": "proxyObsidian"
        }
      ]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
